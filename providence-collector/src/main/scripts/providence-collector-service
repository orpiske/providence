RETVAL=0

localDir="$(dirname $0)"
installDir="$(dirname "${localDir}")"

if [[ ${installDir} == "." ]] ; then
	installDir=".."
fi

source "${installDir}/config/providence-collector-service.conf"

RED="\e[0;31m"
GREEN="\e[0;32m"
RESET="\e[0m"

function esuccess() {
    echo -e "${GREEN} OK${RESET}"
}

function eerror() {
    echo -e "${RED} failed${RESET} ($@)"
}

function start() {
    echo -en "Starting providence daemon: "
    nohup "${installDir}/bin/providence-collector" "$@" >/dev/null 2>/dev/null &
    if [[ $? != 0 ]] ; then
        eerror "failed to daemonize the Providence Collector"
        exit 1
    fi

    sleep 1s
    processCount=0
    for pid in $(pgrep -f ".*java.*bin/providence-collector.*") ; do
        if (( processCount == 0 )) ; then
            esuccess
        fi
        echo -e "Providence collector started:${GREEN} ${pid} ${RESET}"
        ((processCount++))
    done

    if (( processCount == 0 )) ; then
        eerror "Providence collector did not start successfully"
    fi
}

function stop() {
    for pid in $(pgrep -f ".*java.*bin/providence-collector.*") ; do
        echo "Killing Providence collector ${pid}"
        kill -TERM ${pid}
    done
}

function restart() {
    stop
    start
}

function printHelp() {
    echo "Usage: ${0} [start|stop|restart]"
}


if [[ -z ${1} ]] ; then
    printHelp
    exit 2
fi


case "${1}" in
	start)
		start "${2}" "${3}"
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	*)
		printHelp
		RETVAL=2
esac

exit ${RETVAL}